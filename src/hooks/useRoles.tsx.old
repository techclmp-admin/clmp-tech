import { useState, useEffect } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { supabase } from '@/integrations/supabase/client';
import { useAuth } from './useAuth';
import { useToast } from './use-toast';

export interface Role {
  id: string;
  name: string;
  tag: string;
  description: string;
  auto_approve?: boolean;
  requires_evidence?: boolean;
  created_at: string;
  updated_at: string;
}

export interface UserRole {
  id: string;
  user_id: string;
  role_id: string;
  status: string;
  assigned_by?: string;
  created_at: string;
  updated_at: string;
  role?: Role;
}

export const useRoles = () => {
  const { user } = useAuth();
  const { toast } = useToast();
  const queryClient = useQueryClient();

  // Fetch all available roles
  const { data: roles, isLoading: rolesLoading } = useQuery({
    queryKey: ['roles'],
    queryFn: async () => {
      const { data, error } = await supabase
        .from('roles')
        .select('*')
        .order('name');
      
      if (error) throw error;
      return data;
    },
    enabled: !!user,
  });

  // Fetch current user's roles
  const { data: userRoles, isLoading: userRolesLoading } = useQuery({
    queryKey: ['user-roles', user?.id],
    queryFn: async () => {
      if (!user?.id) return [];
      
      const { data, error } = await supabase
        .from('user_roles')
        .select(`
          *,
          role:roles(*)
        `)
        .eq('user_id', user.id)
        .eq('status', 'active');
      
      if (error) throw error;
      return data;
    },
    enabled: !!user,
  });

  // Check if user has specific role
  const hasRole = (roleTag: string, projectId?: string): boolean => {
    if (!userRoles) return false;
    
    return userRoles.some(userRole => 
      userRole.role?.tag === roleTag &&
      userRole.status === 'active'
    );
  };

  // Check if user has permission (simplified for current schema)
  const hasPermission = (module: string, action: string, projectId?: string): boolean => {
    if (!userRoles) return false;
    
    // For now, admin has all permissions
    if (hasRole('admin_sysops')) return true;
    
    // Project managers have most permissions for their projects
    if (hasRole('project_manager', projectId)) {
      return ['read', 'update', 'create'].includes(action);
    }
    
    // Basic permissions for other roles
    return hasRole('team_member', projectId) && action === 'read';
  };

  // Check if user is admin
  const isAdmin = hasRole('admin_sysops');

  // Check if user is project manager for specific project
  const isProjectManager = (projectId?: string) => hasRole('project_manager', projectId);

  // Assign role to user
  const assignRoleMutation = useMutation({
    mutationFn: async ({
      userId,
      roleId,
      projectId,
    }: {
      userId: string;
      roleId: string;
      projectId?: string;
    }) => {
      const { error } = await supabase
        .from('user_roles')
        .insert({
          user_id: userId,
          role_id: roleId,
          assigned_by: user?.id,
        });
      
      if (error) throw error;
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['user-roles'] });
      toast({
        title: "Success",
        description: "Role assigned successfully",
      });
    },
    onError: (error: Error) => {
      toast({
        title: "Error",
        description: error.message,
        variant: "destructive",
      });
    },
  });

  // Remove role from user
  const removeRoleMutation = useMutation({
    mutationFn: async (userRoleId: string) => {
      const { error } = await supabase
        .from('user_roles')
        .delete()
        .eq('id', userRoleId);
      
      if (error) throw error;
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['user-roles'] });
      toast({
        title: "Success",
        description: "Role removed successfully",
      });
    },
    onError: (error: Error) => {
      toast({
        title: "Error",
        description: error.message,
        variant: "destructive",
      });
    },
  });

  return {
    // Data
    roles,
    userRoles,
    
    // Loading states
    rolesLoading,
    userRolesLoading,
    isLoading: rolesLoading || userRolesLoading,
    
    // Permission checks
    hasRole,
    hasPermission,
    isAdmin,
    isProjectManager,
    
    // Mutations
    assignRole: assignRoleMutation.mutate,
    removeRole: removeRoleMutation.mutate,
    isAssigningRole: assignRoleMutation.isPending,
    isRemovingRole: removeRoleMutation.isPending,
  };
};